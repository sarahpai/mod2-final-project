<div class="splash-image">
<div class="ui middle aligned center aligned grid">
  <div class="column"  id="login-form">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>

    <%= form_tag login_path, class: "ui form" do %>
      <div class="ui stacked element">
        <div class="field">
          <%= label_tag 'Username' %>
          <%= text_field_tag :user_name %>
        </div>
        <div class="field">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
      </div>
<br>
      <%= submit_tag 'Login', class: "ui fluid large teal submit button" %>
      <br>
      New to us? <%= link_to 'Sign Up', signup_path, class: "ui teal basic button" %>
    <% end %>
  </div>
</div>
</div>

