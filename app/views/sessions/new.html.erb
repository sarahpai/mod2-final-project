<h1>Login</h1>

<h2><%= flash[:notice] %></h2>

<%= form_tag login_path do %>
  <%= label_tag :user_name %>
  <%= text_field_tag :user_name %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag 'Login' %>
  <%= link_to 'Sign Up', signup_path %>
<% end %>
