<div class="review_back_image">
  <div class="ui grid">
    <div class="twelve wide column">
    </div>
    <div class="twelve wide column">
    </div>
    <div class="four wide column">
      <div class="review_form">
      <h2 class="ui teal image header">
        <div class="content">
          Write a Review
        </div>
      </h2>
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p><%= error %></p>
        <% end %>
      <% end %>
      <%= form_for @review, :html => {:class => 'ui form'} do |f| %>
      <div class="ui stacked element">
        <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %><br>
        </div>
        <div class="field">
          <%= f.label :comment %><br>
          <%= f.text_area :comment %><br>
        </div>
        <div class="field">
          <%= f.label :star %>
          <%= f.number_field :star %>
        </div>

      </div>
      <br>
      <%= f.submit 'Submit', :class => 'ui fluid large teal submit button' %>
      <br>
    <% end %>
  </div>
</div>
</div>

