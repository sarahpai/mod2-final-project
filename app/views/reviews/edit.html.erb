<div class="review_back_image">
  <div class="ui grid">
    <div class="twelve wide column">
    </div>
    <div class="twelve wide column">
    </div>
    <div class="four wide column">
      <div class="review_form">
      <h2 class="ui teal image header">
        <div class="content">
          Edit Review
        </div>
      </h2>
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p><%= error %></p>
        <% end %>
      <% end %>
      <%= form_for @review, :html => {:class => 'ui form'} do |f| %>
      <div class="ui stacked element">
        <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %><br>
        </div>
        <div class="field">
          <%= f.label :comment %><br>
          <%= f.text_area :comment %><br>
        </div>
        <div class="field">
          <%= f.label 'Rating' %>
          <%= f.radio_button :star, 1 %>
          <%= image_tag "star.png", alt: "1"%><br>
          <%= f.radio_button :star, 2 %>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png", alt: "2"%><br>
          <%= f.radio_button :star, 3 %>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png", alt: "3"%><br>
          <%= f.radio_button :star, 4 %>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png", alt: "4"%><br>
          <%= f.radio_button :star, 5 %>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png"%>
          <%= image_tag "star.png", alt: "5"%>

        </div>

      </div>
      <br>
      <%= f.submit 'Submit', :class => 'ui fluid large teal submit button' %>
      <br>
    <% end %>
  </div>
</div>
</div>

