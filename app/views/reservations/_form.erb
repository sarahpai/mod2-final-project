<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @reservation do |f| %>
<%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.label :party_size %>
<%= f.number_field :party_size %><br>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :time %>
<%= f.time_select :time,
  :combined => true,
  :default => Time.now.change(:hour => 11, :min => 30),
  :minute_interval => 15,
  :time_separator => "",
  :start_hour => 17,
  :start_minute => 30,
  :end_hour => 22,
  :end_minute => 30,
  :ampm => true
%><br>
<%= f.submit %>

<% end %>
