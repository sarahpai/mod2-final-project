  <%= form_for(:session, :url => {:controller => 'users', :action => 'create'}) do |f| %>
  <p> Username:<br> <%= f.text_field :user_name%> </p>
  <p> Email:<br> <%= f.text_field :email%> </p>
  <p> Password:<br> <%= f.password_field :password%></p>
  <p> Password Confirmation:<br> <%= f.password_field :password_confirmation%> </p>
  <%= f.submit :Signup %>
  <% end %>

  <% if @user.errors.any? %>
  <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
    <li>* <%= message_error %></li>
    <% end %>
  </ul>
  <% end %>
</div>





<%= form_for user do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :profile_picture %>
    <%= f.file_field :profile_picture %>
  </div>

  <%= f.submit %>
<% end %>
