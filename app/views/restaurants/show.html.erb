<!-- first box -->
<div class="ui grid">

 <div class="three column row">
  <div class="column">
    <div class="ui segment ">

      <img src= <%= "http://maps.google.com/maps/api/staticmap?size=200x150&zoom=17&markers=#{@restaurant.latitude}%2C#{@restaurant.longitude}&key=#{ENV["GOOGLE_MAPS_API_KEY"]}" %> style="width; 40%">
      <div class="ui star rating" data-rating="3"></div>
    </div>
  </div>
  <!-- middle box -->
  <div class="column">
    <div class="ui segment">

      <%= form_for @restaurant do |f| %>
        <%= f.label :restaurant_photo %>
        <%= f.file_field :restaurant_photo %>
        <%= f.submit class: "ui basic button" %>
      <% end %>
    </div>
  </div>
  <!-- right box  -->
  <div class="column">
    <div class="ui segment">
        <i class="phone square icon"></i>
        Phone:
        <%= @restaurant.phone %><br>

        <i class="icons"><i class="payment icon"></i><i class="payment"></i></i>
        Accept Credit Card:
        <%= @restaurant.credit_card ? "Yes" : "No" %> <br>
        Delivery:
        <%= @restaurant.delivery ? "Yes" : "No" %><br>
        <i class="icons"><i class="clock icon"></i><i class="clock"></i></i>
        Hours of operation:
        <br>
        Mon Closed<br>
        Tue 5:00 pm - 12:00 am<br>
        Wed 5:00 pm - 12:00 am<br>
        Thu 5:00 pm - 12:00 am<br>
        Fri 5:00 pm - 12:00 am<br>
        Sat 5:00 pm - 12:00 am<br>
        Sun 5:00 pm - 12:00 am<br>
        <br>
        <i class="icons"><i class="signup icon"></i><i class="signup"></i></i>
        <%= link_to 'Write a Review', new_review_path(@restaurant.id) %><br>
        <i class="calendar alternate icon"></i>
        <%= link_to 'Make a Reservation', new_reservation_path(@restaurant.id) %><br>
        <%= link_to 'Back', restaurants_path %>
      </div>
      </div>
  </div>
</div>







