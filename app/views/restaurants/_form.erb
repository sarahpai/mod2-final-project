<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
  <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @restaurant do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :address %>
<%= f.text_field :address %><br>
<%= f.label :phone %>
<%= f.text_field :phone %><br>
<%= f.label :credit_card %>
<%= f.check_box :credit_card %><br>
<%= f.label :delivery %>
<%= f.check_box :delivery %><br>
<%= f.label :restaurant_photo, "Photo" %><br>
<%= f.file_field :restaurant_photo %><br>
<%= f.submit %>
<% end %>
